{
  "name": "dentelis/php-hydrator",
  "description": "Extremely fast object and array hydrator with strict type matching",
  "license": "MIT",
  "authors": [
    {
      "name": "Dim Entelis",
      "email": "dentelis@gmail.com",
      "homepage": "https://www.linkedin.com/in/dentelis/",
      "role": "Developer"
    }
  ],
  "keywords": [
    "hydrator",
    "hydration",
    "performance",
    "array conversion",
    "object conversion"
  ],
  "support": {
    "issues": "https://github.com/dentelis/php-hydrator/issues"
  },
  "type": "library",
  "require": {
    "php": "~8.2"
  },
  "autoload": {
    "psr-4": {
      "Dentelis\\Hydrator\\": "src/",
      "Lbaf\\": "src/Lbaf"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "tests\\": "tests/"
    }
  },
  "minimum-stability": "dev",
  "scripts": {
    "test": "vendor/bin/phpunit tests --fail-on-risky  --display-warnings --display-errors --display-notices  --display-skipped --display-deprecations",
    "psalm": "vendor/bin/psalm --shepherd --show-info=true --no-diff"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.2@dev",
    "vimeo/psalm": "^6.0@dev"
  }
}
